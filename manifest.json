{
  "manifest_version": 3,
  "name": "コドモン Image Downloader",
  "version": "1.0",
  "description": "Automatically add download button for images on parents.codmon.com",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "*://image.codmon.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://parents.codmon.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
